@using proyecto_core.Models.ManageViewModels
@using proyecto_core
@model IndexViewModel
@{
    ViewData["Title"] = "Ajustes de la cuenta";
    var arr = "@";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Cambiar ajustes de la cuenta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>
            @Model.ApplicationUser.Name <a asp-controller="Manage" asp-action="ChangeName" class="btn-bracketed">Cambiar</a>
        </dd>
        <dt>Nombre de usuario</dt>
        <dd>
            @arr@Model.ApplicationUser.UserName
        </dd>
        <dt>Correo electrónico:</dt>
        <dd>
            @Model.ApplicationUser.Email <a asp-controller="Manage" asp-action="ChangeEmail" class="btn-bracketed">Cambiar</a>
        </dd>
        <dt>Contraseña:</dt>
        <dd>
            ******** <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Cambiar</a>
        </dd>
    </dl>
    @if (Model.IsAdmin) {
        <a asp-controller="Admin" asp-action="Index" class="btn btn-info">Adminsitración</a>
    }
</div>
