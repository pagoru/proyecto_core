@model ChangeEmailViewModel
@{
    ViewData["Title"] = "Cambiar correo electrónico";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Manage" asp-action="ChangeEmail" method="post" class="form-horizontal">
    <h4>Formulario para cambiar el correoe electrónico</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="OldEmail" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <label class="col-md-2 control-label">@Model.ApplicationUser.Email</label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewEmail" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewEmail" class="form-control" />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmEmail" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmEmail" class="form-control" />
            <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Cambiar correo electrónico</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
