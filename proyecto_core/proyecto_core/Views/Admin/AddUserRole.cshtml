@using proyecto_core.Models.AdminViewModels
@model AddUserRoleViewModel
@{
    ViewData["Title"] = $"Añadir rol a usuario";
}
<h5>
    <a asp-controller="Admin" asp-action="Index">Admin</a>
    <span>/</span>
    <a asp-controller="Admin" asp-action="DetailsRole/@Model.IdentityRole.Name">Rol(@Model.IdentityRole.Name)</a>
    <span>/</span>
    <span>Añadir Rol a Usuario</span>
</h5>

<h2>@ViewData["Title"]</h2>
<h4>Añadir el rol @Model.IdentityRole.Name al usuario</h4>
<hr />

<form asp-controller="Admin" asp-action="AddUserRole" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="RoleName" type="hidden" name="RoleName" value="@Model.IdentityRole.Name" />
    <div class="form-group">
        <label for="UserName">Selecciona un usuario:</label>
        <select asp-for="UserName" class="form-control" id="UserName">
            @foreach (ApplicationUser au in Model.ApplicationUserList)
            {
                <option>@au.UserName</option>
            }
        </select>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-6">
            <button type="submit" class="btn btn-default">Añadir</button>
        </div>
    </div>
</form>
