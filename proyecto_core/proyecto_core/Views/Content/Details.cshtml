{
    <h2>Details</h2>

    <h3>@Model.ApplicationContent.Title</h3>
    <h3>@Model.ApplicationContent.Description</h3>
    <h3>@Model.ApplicationContent.AudioDescription</h3>
}

<div asp-validation-summary="All" class="text-danger"></div>